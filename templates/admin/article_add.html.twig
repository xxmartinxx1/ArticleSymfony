{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Dodaj artyku≈Ç</h1>

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.title) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.text) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.Relation) }}
                        </div>

                        {{ form_row(form._token) }}

                        <div class="d-grid mt-4 w-25">
                            <button type="submit" class="btn btn-primary">Dodaj</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>







{% endblock %}


